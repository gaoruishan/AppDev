<?xml version="1.0" encoding="utf-8"?>
<com.commlibs.libwidget.ActionBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    style="@style/action_bar">

    <!--最 Left ImageView-->
    <ImageView
        android:id="@+id/action_bar_left"
        style="@style/action_tab_lr"
        android:src="@drawable/nav_head_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <!--最 Left TextView-->
    <TextView
        android:id="@+id/action_bar_left_text"
        style="@style/action_tab_lr"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="@string/back"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        android:visibility="gone"/>
    <!--最 Right ImageView-->
    <ImageView
        android:id="@+id/action_bar_right"
        style="@style/action_tab_lr"
        android:layout_alignParentRight="true"
    />
    <!--第二 Right ImageView-->
    <ImageView
        android:id="@+id/action_bar_right2"
        style="@style/action_tab_lr"
        android:layout_toLeftOf="@id/action_bar_right"
        android:src="@drawable/btn_delete_nor"
        android:visibility="gone"/>
    <!--最 Right TextView-->
    <TextView
        android:id="@+id/action_bar_right_text"
        style="@style/action_tab_lr"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="@color/text_color_gray"
        android:textSize="16sp"/>
    <!-- 中间的Title -->
    <com.commlibs.libwidget.text.AlwaysMarqueeTextView
        android:id="@+id/action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:maxWidth="160dp"
        android:text="@string/app_name"
        android:textSize="18sp"/>
    <!--底部divide线-->
    <View
        android:id="@+id/action_bar_divide"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line_light"/>

</com.commlibs.libwidget.ActionBar>