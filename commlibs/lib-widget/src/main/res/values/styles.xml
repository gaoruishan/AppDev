<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style for actions bar. -->
    <style name="action_bar">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!-- Style for actions bar left/right item -->
    <style name="action_tab_lr">
        <item name="android:gravity">center</item>
        <item name="android:padding">13dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="tab_text_appearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:text">请选择</item>
        <item name="android:textColor">@color/selector_tv_select</item>
        <item name="android:textSize">15sp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>